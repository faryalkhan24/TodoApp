@model ToDoWebApp.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>

              @using (Html.BeginForm("Login", "User", FormMethod.Post))
              {
                 @Html.AntiForgeryToken()
                 <div data-mdb-input-init class="form-group form-outline form-white mb-4">
                     @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg", @placeholder = "User Name", required = "required" })
                    @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger"})
                 </div>
                 <div class="form-group form-outline form-white mb-4">
                     @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Password", required = "required" })
                     @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                 </div>
                 <button data-mdb-button-init data-mdb-ripple-init class="btn btn-lg px-5 gradient-custom text-white" type="submit">Login</button>
              }
            </div>

            <div>
              <p class="mb-0">Don't have an account? <a href="@Url.Action("Register", "User")" class="text-white-50 fw-bold">Register</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
