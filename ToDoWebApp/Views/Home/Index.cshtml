@model ToDoWebApp.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Update path if needed
}


<section class="vh-100" >
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-12 col-xl-4">

                <div class="card shadow" style="border-radius: 15px;">
                    <div class="card-body text-center">
                        <h2 class="fw-bold mb-2 text-uppercase">To Do Dashboard</h2>
                        <div class="mt-3 mb-4">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
                                 class="rounded-circle img-fluid" style="width: 100px;" />
                        </div>                        <h4 class="mb-2">@Model.UserName</h4>
                        <div class="d-flex justify-content-between text-center mt-5 mb-2">
                            <div>
                                <p class="mb-2 h5">@Model.CompletedTasks</p>
                                <p class="text-muted mb-0">Completed Items</p>
                            </div>
                            <div class="px-3">
                                <p class="mb-2 h5">@Model.PendingTasks</p>
                                <p class="text-muted mb-0">Pending Items</p>
                            </div>
                            <div>
                                <p class="mb-2 h5">@Model.TotalTask</p>
                                <p class="text-muted mb-0">Total Items</p>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between text-center mt-5 mb-2">

                            <a href="@Url.Action("Index", "Task")" type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-lg px-5 gradient-custom text-white">
                                Tasks
                            </a>
                            <a href="@Url.Action("Logout", "User")" type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-lg px-5 gradient-custom text-white">
                                Logout
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>