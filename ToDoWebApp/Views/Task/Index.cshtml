@model List<ToDoWebApp.Models.DAL.Task>
@{
    ViewBag.Title = "Your To Do";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/task.css" asp-append-version="true" />
    <script src="~/js/taskList.js"></script>
</head>

<div class="container-fluid">
    <div class="row">
        <div class="col-12 gradient-custom"></div>
    </div>
    <div class="row mt-4">
        <div class="col-6 offset-3">
            <div class="card shadow" style="border-radius: 15px;">
                <div class="card-header text-center">
                    <h2 class="card-title fw-bold mb-2 text-uppercase">To Do Items</h2>
                    <ul class="nav nav-tabs nav-fill">
                        <li class="nav-item">
                            <a class="nav-link active" id="allTasksTab" href="#" data-tab="all">All Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="activeTab" href="#" data-tab="active">Active Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="completedTab" href="#" data-tab="completed">Completed Tasks</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body text-center">
                    <div class="table-responsive">
                    <table class="table table-striped" id="taskTable">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Due Date</th>
                                <th>Completed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    </div>
                    <div class="d-flex justify-content-between text-center mt-5 mb-2">
                        <button class="btn btn-lg px-5 gradient-custom text-white" id="btnAddTask">Add Item</button>
                        <a class="btn btn-lg px-5 gradient-custom text-white" href="@Url.Action("Index", "Home")">Dashboard</a>
                        <a href="@Url.Action("Logout", "User")" type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-lg px-5 gradient-custom text-white">
                            Logout
                        </a>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>